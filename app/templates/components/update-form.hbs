{{yield}}
{{#if addNewProduct}}
  <h1>New Product</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Product Name</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description id="description"}}
      </div>

      <div class="form-group">
        <label for="cost">Cost</label>
        {{input value=cost id="cost"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveProduct1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-danger"{{action 'productFormShow'}}>Update Product</button>
{{/if}}
